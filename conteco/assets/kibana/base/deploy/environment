#!/usr/bin/env bash

# this file contains the default settings
# scaling parameters are applied after loading defaults

# GLOBAL REPLACEMENTS
DOLLAR='$'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_KIBANA_ENVIRONMENT,$CONTECO_DC_KIBANA_COMMAND,$CONTECO_DC_KIBANA_VOLUMES,$CONTECO_DC_KIBANA_DEPLOY_MODE,$CONTECO_DC_KIBANA_DEPLOY_REPLICAS'
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_KIBANA_ENVIRONMENT="\
'ELASTICSEARCH_HOSTS=${DOLLAR}{CONTECO_DC_KIBANA_ENVIRONMENT_ELASTICSEARCH_HOSTS}', \
'SERVER_BASEPATH=${DOLLAR}{CONTECO_DC_KIBANA_ENVIRONMENT_SERVER_BASEPATH}'"
export CONTECO_DC_KIBANA_COMMAND=
export CONTECO_DC_KIBANA_VOLUMES=
export CONTECO_DC_KIBANA_DEPLOY_MODE="replicated"
export CONTECO_DC_KIBANA_DEPLOY_REPLICAS="1"

# START VARIABLES kibana.base
export CONTECO_DC_KIBANA_PORTS="5601:5601"
export CONTECO_DC_KIBANA_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_KIBANA_ENVIRONMENT_ELASTICSEARCH_HOSTS=http://elasticsearch:9200
export CONTECO_DC_KIBANA_ENVIRONMENT_SERVER_BASEPATH=
export CONTECO_DC_KIBANA_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.05"
export CONTECO_DC_KIBANA_DEPLOY_RESOURCES_LIMITS_MEMORY="256m"
export CONTECO_DC_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="128m"
# END VARIABLES kibana.base

# START GLOBAL VARIABLES
export CONTECO_DC_GLOBAL_VOLUMES=
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_DC_KIBANA_NETWORKS}: { external: true }"
# END GLOBAL VARIABLES
