#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="kibana.base"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_kibana"
export CONTECO_DC_GLOBAL_BOOTSTACKS="conteco_dc_kibana"
export CONTECO_DC_GLOBAL_RUNSTACKS=""
export CONTECO_DC_GLOBAL_VOLUME_LIST=""
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_KIBANA_ENVIRONMENT,$CONTECO_DC_KIBANA_COMMAND,$CONTECO_DC_KIBANA_PORTS,$CONTECO_DC_KIBANA_VOLUMES,$CONTECO_DC_KIBANA_NETWORKS,$CONTECO_DC_KIBANA_DEPLOY_MODE,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_KIBANA_ENVIRONMENT="\
'ELASTICSEARCH_HOSTS=http://elasticsearch:9200',\
'SERVER_BASEPATH=/${DOLLAR}{CONTECO_URLPREFIX}/kibana', \
'XPACK_MONITORING_UI_CONTAINER_ELASTICSEARCH_ENABLED=false', \
'LOGGING_VERBOSE=false'"
export CONTECO_DC_KIBANA_COMMAND=
export CONTECO_DC_KIBANA_PORTS=
export CONTECO_DC_KIBANA_VOLUMES=
export CONTECO_DC_KIBANA_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay"
export CONTECO_DC_KIBANA_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_VOLUMES=
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS kibana.base
export CONTECO_DC_KIBANA_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export CONTECO_DC_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS kibana.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
